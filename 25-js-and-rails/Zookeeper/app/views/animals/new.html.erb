<%= form_for @animal do |f| %>
	<div class='form-group'>
		<%= f.label :name %>
		<%= f.text_field :name, :class => "form-control"%>
	</div>

	<div class='form-group'>
		<%= f.label :age %>
		<%= f.text_field :age, :class => "form-control"%>
	</div>

	<div class='form-group'>
		<%= f.label :species %>
		<%= f.collection_select :species_id, @species, :id, :name, :class => "form-control"%>
	</div>

	<div class='form-group'>
		<%= f.submit %>
	</div>
<% end %>